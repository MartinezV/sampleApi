@using System.Collections.Generic
@using System.Collections.ObjectModel
@using System.Web.Http.Description
@using System.Threading
@using AdsApi.Areas.HelpPage.ModelDescriptions
@model IList<ParameterDescription>



@if (Model.Count > 0)
{
    <table class="table table-striped table-inverse">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Info</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ParameterDescription parameter in Model)
            {
                ModelDescription modelDescription = parameter.TypeDescription;
                <tr>
                    <td>@parameter.Name</td>
                    <td>@modelDescription.ModelType.Name</td>
                    <td>
                        @if (parameter.Annotations.Count > 0)
                        {
                            foreach (var annotation in parameter.Annotations)
                            {<p>@annotation.Documentation</p>}
                        }
                        else
                        {
                            <p>None.</p>
                        }
                    </td>
                    <td>
                        <input type="text" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
    <div style="text-align:right;">
        <input type="button" name="button" class="btn btn-primary" value="Try" />
    </div>

}
else
{
    <p>None.</p>
}





